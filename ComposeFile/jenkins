version: "3.8"
service: 
  jenkins:
    image: jenkins
    volumes: 
      - /data/jenkins:/data/ops/jenkins_data
      - /var/run/docker.sock:/var/run/docker.sock
      - /usr/bin/docker:/usr/bin/docker
    ports:
      - 8081:8080
    expose:
      - 8080
      - 50000
    privileged: true
    user: root
    restart: always
    container_name: jenkins
    environment:
      JAVA_OPTS: '-Djava.util.logging.config.file=/var/jenkins_home/log.properties'